<div class="container">
  <div class="row">
    <div class="col-lg-12 header">
      <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/3a/Burger_King_Logo.svg/1200px-Burger_King_Logo.svg.png" height="150" width="150">
    </div>
    <div class="col-lg-5 text-center for_delivery">
      <div class="col-lg-12 for_delivery_sign">For Delivery:</div>
      <div class="row list">        
        {{#each data}}
          {{#unless this.devoured}}
          <div class="col-lg-9 text-center">
            <div class="burger_list_item">Order #{{this.id}}: {{this.burger_name}}</div>
          </div>
          <div class="col-lg-3 text-left">
            <form method="POST" action="/burgers/update?_method=PUT">
              <input type="hidden" name="burger_id" type="text" value={{this.id}}>
              <button type="submit" class="btn btn-default">DELIVER</button>
            </form>
          </div>
          {{/unless}}
        {{/each}}
      </div>
    </div> 
    <div class="col-lg-1"></div>
    <div class="col-lg-5 text-center delivered">
      <div class="col-lg-12 delivered_sign">Delivered:</div>
      {{#each data}}
        {{#if this.devoured}}
          <input class="form-control delivered" type="text" placeholder="Order #{{this.id}}: {{this.burger_name}}">
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-11 text-center order_spot">
      <form method="POST" action="/burgers/create">
        <p>Enter order here:</p>
        <input class="form-control" name="burger_name" type="text" value="" id="enter_text"><br>
        <button type="submit" class="btn btn-default order-btn">SUBMIT</button>
      </form>
    </div>
  </div>
</div>